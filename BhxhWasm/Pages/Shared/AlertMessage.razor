@if (!string.IsNullOrEmpty(Message))
{
    <FluentLabel Color="@Color" Typo="Typography.H4">@Message</FluentLabel>
}

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public Color? Color { get; set; } = Microsoft.FluentUI.AspNetCore.Components.Color.Success;
    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(Message))
        {
            if (Message.StartsWith("Error"))
                Color = Microsoft.FluentUI.AspNetCore.Components.Color.Error;
            else if (Message.StartsWith("Warning"))
                Color = Microsoft.FluentUI.AspNetCore.Components.Color.Warning;
        }
    }
}